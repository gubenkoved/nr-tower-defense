<UserControl x:Class="NRTowerDefense.GameParametrControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50" />
            <ColumnDefinition />
            <ColumnDefinition Width="50" />
            <ColumnDefinition Width="50" />
        </Grid.ColumnDefinitions>
        <Image Name="image" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center" Width="30" Height="30" />
        <Label Name="text" Grid.Column="1" Content="text" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="#FF303030" />
        <Label Name="value" Grid.Column="2" Content="-" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="#FF303030" />
        <Label Name="increment" Grid.Column="3" Content="-" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="Green" />
    </Grid>
</UserControl>
